<div class="main-container trader">
    <!--<div class="logo">
            <img src="./images/marketgologo.png" alt="">
        </div>
        <h1>Market Go. Buy. Pay Later</h1>-->

    

    <div class="side-section" style="background-color: #fff; color:#333;">
        <h2><%= name %></h2>
        <br>
       <div class="section-menu">
            <a href="/generate-trader-statement"><p style="font-size: 12px; color:#333;"><i class="fa fa-receipt" style="color: #333;"></i> <br> Transactions</p></a>
            <p style="font-size: 12px;"><i class="fa fa-id-card-clip"></i> <br> <%= id %></p>
            
            <br>
        <table>
            <thead>
                <tr>
                    <th><i class="fa fa-coins"></i> Earned</th>
                    <th><i class="fa fa-coins"></i> Income</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>KES. <%= budget %></td>
                    <td>KES. <%= revenue %></td>
                </tr>
            </tbody>
        </table>
       </div>
        
    </div>

    <div class="side-section">
        <% if(orders.length>0){ %>
            <h1>Packages</h1>
           <% orders.forEach(function(order) { %>
            <% if(!order.isSigned){ %>
            <div class="transaction-card">
                <% const formatter = new Intl.NumberFormat('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }); %>
                <p><i class="fa fa-circle-check"> </i> KES. <%= formatter.format(order.cost) %> - <%= order.custId %></p>
            </div>
            <% } %>
            <% }) %>
        <% }else{ %>
            <div class="transaction-card" style="box-shadow: none;">
                <p>No due payment</p>
            </div>
        <% } %>
    
       <a href="/updateRetailerBalances"> <button class="btnCheckOut">Update Earnings</button></a>
        

        
    </div>

    <div class="side-section custid-form">
        <h1>Make Order</h1>
        <p>Enter the cutomer transaction id, price and save order for packaging and delivery.</p>
        <br>
        <!--previous transaction sections-->
        <form action="/order" method="POST">
            <div class="transaction-card">
                <input type="text" name="custid" id="custid" list="userIds" placeholder="e.g. utr-kOP254...">
                <datalist id="userIds">
                  <% customerList.forEach((customer) => { %>
                    <option value="<%= customer.userTransactionId %>"><%= customer.userName %> - <%= customer.userTransactionId %></option>
                  <% }) %>
                </datalist>
            </div>
            <div class="transaction-card">
                <input type="number" name="cost" id="cost" placeholder="e.g. 1200">
            </div>
            <button class="btnCheckOut">Add Order</button>
        </form>
        <!--end of transaction sections-->

       

        
    </div> 

    <div class="side-section">
       
    </div>

   
    
</div>

